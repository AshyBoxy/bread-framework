{
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "listEmittedFiles": true,
        "module": "ESNext",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "moduleResolution": "node", // should this be updated to nodenext, as well as removing loader.js later?
        "target": "ES2022",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}
