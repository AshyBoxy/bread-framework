{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "listEmittedFiles": true,
        "module": "ES2022",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "moduleResolution": "node",
        "target": "ES2022",
        "allowSyntheticDefaultImports": true
    }
}
